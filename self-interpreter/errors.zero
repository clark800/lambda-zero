#* errors.zero

define showErrorLocation(Tag(lexeme, location))
    "'" ++ lexeme ++ "' at " ++ showLocation(location) ++ "\n"


define throwError(message, tag)
    error(message ++ " " ++ showErrorLocation(tag))


define parseError(message, tag)
    throwError("Syntax error: " ++ message, tag)


define syntaxError(message, node)
    parseError(message, getTag(node))


define runtimeError(message, tag)
    throwError("\nRuntime error: " ++ message, tag)

#*
