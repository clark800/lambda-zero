#!/bin/bash -e
# use bash process substitution to prepend prelude to source file
DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
LIB="$DIR/../libraries"
# read input first to check for errors accessing files
declare -a files=(
    "$LIB/operators.zero"
    "$LIB/prelude.zero"
    "$LIB/protoset.zero"
    "$LIB/table.zero"
    "$DIR/lex.zero"
    "$DIR/ast.zero"
    "$DIR/errors.zero"
    "$DIR/symbols.zero"
    "$DIR/term.zero"
    "$DIR/type.zero"
    "$DIR/patterns.zero"
    "$DIR/define.zero"
    "$DIR/brackets.zero"
    "$DIR/syntax.zero"
    "$DIR/closure.zero"
    "$DIR/serialize.zero"
    "$DIR/builtins.zero"
    "$DIR/bind.zero"
    "$DIR/parse.zero"
    "$DIR/evaluate.zero"
    "$DIR/interpret.zero"
)
chmod -f +w meta.tmp || true
cat ${files[@]} > meta.tmp
chmod -w meta.tmp
"$DIR/../bootstrap-interpreter/main" $* meta.tmp
