#* errors.zero

def throwError(message, tag)
    abort message ++ " " ++ showTagWithLocation(tag) ++ "\n"


def parseError(message, tag)
    throwError("Syntax error: " ++ message, tag)


def syntaxError(message, node)
    parseError(message, getTag(node))


def runtimeError(message, tag)
    throwError("\nRuntime error: " ++ message, tag)

