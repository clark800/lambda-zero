#* declarations.zero

define builtinTypes
    syntax(>->) := syntax(||)
    (>->) := FunctionType(noTerm)
    bottom := BottomType(noTerm)
    boolean := NominalType(noTerm, "𝔹", [])
    natural := NominalType(noTerm, "ℕ", [])
    arithmetic := natural >-> natural >-> natural
    comparison := natural >-> natural >-> boolean
    newDictionary([
        ("+", arithmetic),
        ("-", arithmetic),
        ("*", arithmetic),
        ("//", arithmetic),
        ("%", arithmetic),
        ("=", comparison),
        ("=/=", comparison),
        ("<", comparison),
        (">", comparison),
        ("<=", comparison),
        (">=", comparison),
        ("(increment)", natural >-> natural),
        ("(undefined)", bottom)
    ])

define getBuiltinType(term)
    builtinTypes.get(getTagLexeme(getTermTag(term))).setSource(term)

#*
