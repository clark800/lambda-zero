#!/bin/bash -e
# use bash process substitution to prepend prelude to source file
DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
# read input first to check for errors accessing files
declare -a files=(
    "$DIR/../prelude.zero"
    "$DIR/scan.zero"
    "$DIR/ast.zero"
    "$DIR/lex.zero"
    "$DIR/serialize.zero"
    "$DIR/operators.zero"
    "$DIR/builtins.zero"
    "$DIR/bind.zero"
    "$DIR/parse.zero"
    "$DIR/evaluate.zero"
    "$DIR/interpret.zero"
)
chmod -f +w meta.tmp || true
cat ${files[@]} > meta.tmp
chmod -w meta.tmp
"$DIR/../../main" $* meta.tmp
